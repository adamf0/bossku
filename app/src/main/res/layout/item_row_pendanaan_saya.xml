<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_row_pendanaan_saya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_nama_brand_item_row_pendanaan_saya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Nama Brand"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_nomor_transaksi_item_row_pendanaan_saya" />

            <TextView
                android:id="@+id/txt_jumlah_donasi_item_row_pendanaan_saya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Jumlah Donasi"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="@+id/txt_nama_brand_item_row_pendanaan_saya"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txt_nama_brand_item_row_pendanaan_saya"
                app:layout_constraintTop_toBottomOf="@+id/txt_nama_brand_item_row_pendanaan_saya" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/txt_nomor_transaksi_item_row_pendanaan_saya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nomor Transaksi"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/txt_nama_brand_item_row_pendanaan_saya"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txt_nama_brand_item_row_pendanaan_saya"
                app:layout_constraintTop_toBottomOf="@+id/txt_status_item_row_pendanaan_saya" />

            <TextView
                android:id="@+id/txt_status_item_row_pendanaan_saya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="end"
                android:text="Status"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_batal_item_row_pendanaan_saya"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_hapus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/txt_jumlah_donasi_item_row_pendanaan_saya"
                app:layout_constraintTop_toBottomOf="@+id/txt_jumlah_donasi_item_row_pendanaan_saya" />

            <ImageButton
                android:id="@+id/btn_bayar_item_row_pendanaan_saya"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/ic_bill"
                app:layout_constraintBottom_toBottomOf="@+id/btn_batal_item_row_pendanaan_saya"
                app:layout_constraintEnd_toStartOf="@+id/btn_batal_item_row_pendanaan_saya"
                app:layout_constraintTop_toTopOf="@+id/btn_batal_item_row_pendanaan_saya" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>