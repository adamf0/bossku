<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_row_keranjang_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/chk_item_row_keranjang_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_produk_item_row_keranjang_item"
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline22"
            app:layout_constraintStart_toEndOf="@+id/chk_item_row_keranjang_item"
            app:layout_constraintTop_toTopOf="@+id/chk_item_row_keranjang_item"
            app:srcCompat="@drawable/ic_noimage"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/txt_nama_produk_item_row_keranjang_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Nama Produk"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_produk_item_row_keranjang_item"
            app:layout_constraintTop_toTopOf="@+id/img_produk_item_row_keranjang_item" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Harga satuan"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="@+id/txt_nama_produk_item_row_keranjang_item"
            app:layout_constraintStart_toStartOf="@+id/txt_nama_produk_item_row_keranjang_item"
            app:layout_constraintTop_toBottomOf="@+id/txt_nama_produk_item_row_keranjang_item" />

        <TextView
            android:id="@+id/txt_harga_satuan_item_row_keranjang_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#4CAF50"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Jumlah beli"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/txt_harga_satuan_item_row_keranjang_item" />

        <TextView
            android:id="@+id/txt_jumlah_beli_item_row_keranjang_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="TextView"
            android:textColor="#4CAF50"
            app:layout_constraintBottom_toBottomOf="@+id/btn_tambah_item_row_keranjang_item"
            app:layout_constraintStart_toEndOf="@+id/btn_tambah_item_row_keranjang_item"
            app:layout_constraintTop_toTopOf="@+id/btn_tambah_item_row_keranjang_item" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tambah_item_row_keranjang_item"
            style="@style/Widget.App.Button.OutlinedButton.Icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#000000"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
            app:strokeColor="#000000" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_kurang_item_row_keranjang_item"
            style="@style/Widget.App.Button.OutlinedButton.Icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="#000000"
            app:icon="@drawable/ic_minus"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_tambah_item_row_keranjang_item"
            app:layout_constraintStart_toEndOf="@+id/txt_jumlah_beli_item_row_keranjang_item"
            app:layout_constraintTop_toTopOf="@+id/btn_tambah_item_row_keranjang_item"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
            app:strokeColor="#000000" />

        <ImageView
            android:id="@+id/btn_hapus_item_row_keranjang_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_kurang_item_row_keranjang_item"
            app:srcCompat="@drawable/ic_hapus"
            tools:ignore="VectorDrawableCompat" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.78" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>