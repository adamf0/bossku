        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/txt_step4_status_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2"
        android:text="Kirim"
        android:textColor="@color/text_bar_inactive"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_step3_status_bar"
        app:layout_constraintEnd_toEndOf="@+id/img_step4_status_bar"
        app:layout_constraintStart_toEndOf="@+id/ln_step34_status_bar"
        app:layout_constraintTop_toBottomOf="@+id/img_step4_status_bar" />

        <LinearLayout
            android:id="@+id/ln_step45_status_bar"
            android:layout_width="20dp"
            android:layout_height="3dp"
