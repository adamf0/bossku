        app:layout_constraintEnd_toEndOf="@+id/img_step6_status_bar"
        app:layout_constraintStart_toEndOf="@+id/ln_step56_status_bar"
        app:layout_constraintTop_toBottomOf="@+id/img_step6_status_bar" />

        <LinearLayout
            android:id="@+id/ln_step67_status_bar"
