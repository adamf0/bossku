        app:srcCompat="@drawable/ic_barang_disiapkan_inactive"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/txt_step3_status_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2"
        android:text="Siapkan"
        android:textColor="@color/text_bar_inactive"
