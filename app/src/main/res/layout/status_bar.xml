        android:textColor="@color/text_bar_inactive"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_step6_status_bar"
        app:layout_constraintEnd_toEndOf="@+id/img_step7_status_bar"
        app:layout_constraintStart_toEndOf="@+id/ln_step67_status_bar"
