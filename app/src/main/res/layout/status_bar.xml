        android:id="@+id/img_step8_status_bar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_step7_status_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ln_step78_status_bar"
        app:layout_constraintTop_toTopOf="@+id/img_step7_status_bar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_selesai_inactive"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/txt_step8_status_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2"
        android:text="Selesai"
        android:textColor="@color/text_bar_inactive"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_step7_status_bar"
        app:layout_constraintEnd_toEndOf="@+id/img_step8_status_bar"
        app:layout_constraintStart_toEndOf="@+id/ln_step78_status_bar"
