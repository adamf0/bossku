        app:layout_constraintTop_toTopOf="@+id/img_step5_status_bar"
        app:srcCompat="@drawable/ic_menuju_tujuan_inactive"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/txt_step6_status_bar"
        android:layout_width="0dp"
