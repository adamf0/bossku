        android:textColor="@color/text_bar_inactive"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_step1_status_bar"
        app:layout_constraintEnd_toEndOf="@+id/img_step2_status_bar"
        app:layout_constraintStart_toStartOf="@+id/img_step2_status_bar"
        app:layout_constraintTop_toBottomOf="@+id/img_step2_status_bar" />

        <LinearLayout
            android:id="@+id/ln_step23_status_bar"
