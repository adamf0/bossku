        app:layout_constraintEnd_toEndOf="@+id/img_step3_status_bar"
        app:layout_constraintStart_toEndOf="@+id/ln_step23_status_bar"
        app:layout_constraintTop_toBottomOf="@+id/img_step3_status_bar" />

