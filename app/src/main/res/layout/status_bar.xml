            android:layout_marginLeft="3dp"
            android:background="@color/line_bar_inactive"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/img_step4_status_bar"
            app:layout_constraintStart_toEndOf="@+id/img_step4_status_bar"
