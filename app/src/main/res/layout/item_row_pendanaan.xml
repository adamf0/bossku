<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_row_pendanaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="right"
                android:text="Periode Dividen"
                app:layout_constraintBottom_toBottomOf="@+id/textView21"
                app:layout_constraintEnd_toEndOf="@+id/txt_nama_brand_item_row_pendanaan"
                app:layout_constraintStart_toStartOf="@+id/guideline16"
                app:layout_constraintTop_toTopOf="@+id/textView21" />

            <ImageView
                android:id="@+id/img_foto_item_row_pendanaan"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_noimage"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/txt_nama_brand_item_row_pendanaan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Nama Brand"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_foto_item_row_pendanaan" />

            <TextView
                android:id="@+id/txt_nama_umkm_item_row_pendanaan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nama UMKM"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="@+id/txt_nama_brand_item_row_pendanaan"
                app:layout_constraintStart_toStartOf="@+id/txt_nama_brand_item_row_pendanaan"
                app:layout_constraintTop_toBottomOf="@+id/txt_nama_brand_item_row_pendanaan" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="start"
                android:text="Total Pendanaan"
                app:layout_constraintEnd_toStartOf="@+id/guideline16"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txt_nama_brand_item_row_pendanaan"
                app:layout_constraintTop_toBottomOf="@+id/txt_sisa_waktu_item_row_pendanaan" />

            <TextView
                android:id="@+id/txt_total_pendanaan_item_row_pendanaan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Rp 1.000.000.000"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView21"
                app:layout_constraintStart_toStartOf="@+id/textView21"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/txt_total_dividen_item_row_pendanaan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="6 Bulan"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView25"
                app:layout_constraintStart_toStartOf="@+id/textView25"
                app:layout_constraintTop_toBottomOf="@+id/textView25" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mulai Dari"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#8E8E8E"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/txt_nama_umkm_item_row_pendanaan"
                app:layout_constraintStart_toStartOf="@+id/txt_nama_umkm_item_row_pendanaan"
                app:layout_constraintTop_toBottomOf="@+id/txt_nama_umkm_item_row_pendanaan" />

            <TextView
                android:id="@+id/txt_harga_satuan_item_row_pendanaan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rp 100.000"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="@+id/textView29"
                app:layout_constraintStart_toStartOf="@+id/textView29"
                app:layout_constraintTop_toBottomOf="@+id/textView29" />

            <ProgressBar
                android:id="@+id/pb_jumlah_pendanaa_item_row_pendanaan"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:progress="50"
                android:progressDrawable="@drawable/progressbar"
                app:layout_constraintEnd_toEndOf="@+id/txt_harga_satuan_item_row_pendanaan"
                app:layout_constraintStart_toStartOf="@+id/txt_harga_satuan_item_row_pendanaan"
                app:layout_constraintTop_toBottomOf="@+id/txt_harga_satuan_item_row_pendanaan" />

            <TextView
                android:id="@+id/txt_sisa_waktu_item_row_pendanaan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sisa Waktu 10 Hari"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="@+id/pb_jumlah_pendanaa_item_row_pendanaan"
                app:layout_constraintStart_toStartOf="@+id/pb_jumlah_pendanaa_item_row_pendanaan"
                app:layout_constraintTop_toBottomOf="@+id/pb_jumlah_pendanaa_item_row_pendanaan" />

            <TextView
                android:id="@+id/txt_jumlah_pendanaa_item_row_pendanaan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="0.00%"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/txt_total_pendanaan_item_row_pendanaan"
                app:layout_constraintStart_toStartOf="@+id/txt_total_pendanaan_item_row_pendanaan"
                app:layout_constraintTop_toBottomOf="@+id/txt_total_pendanaan_item_row_pendanaan" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_row_pendanaan_ex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_row_pendanaan">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_foto_item_row_pendanaan_ex"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/ic_noimage"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_nama_umkm_item_row_pendanaan_ex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nama UMKM"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="@+id/img_foto_item_row_pendanaan_ex"
                app:layout_constraintStart_toStartOf="@+id/img_foto_item_row_pendanaan_ex"
                app:layout_constraintTop_toBottomOf="@+id/txt_nama_brand_item_row_pendanaan_ex" />

            <TextView
                android:id="@+id/txt_nama_brand_item_row_pendanaan_ex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nama Brand"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/img_foto_item_row_pendanaan_ex"
                app:layout_constraintStart_toStartOf="@+id/img_foto_item_row_pendanaan_ex"
                app:layout_constraintTop_toBottomOf="@+id/img_foto_item_row_pendanaan_ex" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#8E8E8E"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/txt_nama_brand_item_row_pendanaan_ex"
                app:layout_constraintStart_toStartOf="@+id/txt_nama_brand_item_row_pendanaan_ex"
                app:layout_constraintTop_toBottomOf="@+id/txt_nama_umkm_item_row_pendanaan_ex" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="Total Pendanaan"
                app:layout_constraintEnd_toStartOf="@+id/guideline70"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/txt_nama_brand_item_row_pendanaan_ex"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <TextView
                android:id="@+id/txt_total_pendanaan_item_row_pendanaan_ex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView52"
                app:layout_constraintStart_toStartOf="@+id/textView52"
                app:layout_constraintTop_toBottomOf="@+id/textView52" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:text="Total Terkumpul"
                app:layout_constraintBottom_toTopOf="@+id/txt_total_pendanaan_item_row_pendanaan_ex"
                app:layout_constraintEnd_toEndOf="@+id/txt_nama_umkm_item_row_pendanaan_ex"
                app:layout_constraintStart_toStartOf="@+id/guideline70"
                app:layout_constraintTop_toTopOf="@+id/textView52" />

            <TextView
                android:id="@+id/txt_total_terkumpul_item_row_pendanaan_ex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/txt_total_pendanaan_item_row_pendanaan_ex"
                app:layout_constraintEnd_toEndOf="@+id/textView56"
                app:layout_constraintStart_toStartOf="@+id/textView56"
                app:layout_constraintTop_toBottomOf="@+id/textView56" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>