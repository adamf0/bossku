<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.BankSayaTambahActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_bank_saya_tambah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back_white"
        app:subtitleTextColor="#fff"
        app:title="Tambah Bank Saya"
        app:titleTextColor="#fff" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_nama_bank_bank_saya_tambah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:hint="Nama Bank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_bank_saya_tambah">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_nama_bank_bank_saya_tambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="5dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_nomor_rekening_bank_saya_tambah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:hint="Nomor Rekening"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_nama_bank_bank_saya_tambah">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_nomor_rekening_bank_saya_tambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="5dp"
            android:inputType="number"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_atas_nama_bank_saya_tambah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:hint="Atas Nama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_nomor_rekening_bank_saya_tambah">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_atas_nama_bank_saya_tambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="5dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_simpan_bank_saya_tambah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:text="Simpan Perubahan"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/til_atas_nama_bank_saya_tambah"
        app:layout_constraintStart_toStartOf="@+id/til_atas_nama_bank_saya_tambah"
        app:layout_constraintTop_toBottomOf="@+id/til_atas_nama_bank_saya_tambah" />

</androidx.constraintlayout.widget.ConstraintLayout>