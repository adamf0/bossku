<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_row_pendanaan_beli"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_foto_item_row_pendanaan_beli"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_noimage"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/txt_nama_brand_item_row_pendanaan_beli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Nama Brand"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_foto_item_row_pendanaan_beli" />

        <TextView
            android:id="@+id/txt_nama_umkm_item_row_pendanaan_beli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama UMKM"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="@+id/txt_nama_brand_item_row_pendanaan_beli"
            app:layout_constraintStart_toStartOf="@+id/txt_nama_brand_item_row_pendanaan_beli"
            app:layout_constraintTop_toBottomOf="@+id/txt_nama_brand_item_row_pendanaan_beli" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#8E8E8E"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/txt_nama_umkm_item_row_pendanaan_beli"
            app:layout_constraintStart_toStartOf="@+id/txt_nama_umkm_item_row_pendanaan_beli"
            app:layout_constraintTop_toBottomOf="@+id/txt_nama_umkm_item_row_pendanaan_beli" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Terbeli Sebanyak:"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/txt_total_beli_persen_item_row_pendanaan_beli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1%"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="@+id/textView29"
            app:layout_constraintStart_toStartOf="@+id/textView29"
            app:layout_constraintTop_toBottomOf="@+id/textView29" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dalam Satuan Lembar:"
            app:layout_constraintEnd_toEndOf="@+id/txt_total_beli_persen_item_row_pendanaan_beli"
            app:layout_constraintStart_toStartOf="@+id/txt_total_beli_persen_item_row_pendanaan_beli"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_beli_persen_item_row_pendanaan_beli" />

        <TextView
            android:id="@+id/txt_total_beli_lembar_item_row_pendanaan_beli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2 lembar"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="@+id/textView23"
            app:layout_constraintStart_toStartOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dalam Satuan Rupiah:"
            app:layout_constraintEnd_toEndOf="@+id/textView23"
            app:layout_constraintStart_toStartOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_beli_lembar_item_row_pendanaan_beli" />

        <TextView
            android:id="@+id/txt_total_beli_item_row_pendanaan_beli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp 100.000"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="@+id/textView31"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView31"
            app:layout_constraintTop_toBottomOf="@+id/textView31" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Status"
            app:layout_constraintEnd_toEndOf="@+id/textView31"
            app:layout_constraintStart_toStartOf="@+id/textView31"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_beli_item_row_pendanaan_beli" />

        <TextView
            android:id="@+id/txt_status_item_row_pendanaan_beli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="aktif"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/btn_lihat_pembagian_untung_item_row_pendanaan_beli"
            app:layout_constraintEnd_toEndOf="@+id/textView33"
            app:layout_constraintStart_toStartOf="@+id/textView33"
            app:layout_constraintTop_toBottomOf="@+id/textView33" />

        <Button
            android:id="@+id/btn_lihat_pembagian_untung_item_row_pendanaan_beli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button"
            android:text="Lihat Pembagian Keuntungan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>